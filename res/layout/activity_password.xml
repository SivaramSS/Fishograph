<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
 <LinearLayout android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:layout_above="@+id/passwordform"
     android:layout_marginBottom="20dp">
     
     <FrameLayout android:id="@+id/framefordp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1">
         
     <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/realdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
     </FrameLayout>   
     
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:orientation="vertical">
         
        <TextView android:id="@+id/infohandle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="handle"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />
        <TextView
            android:id="@+id/infofollowers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="" />
     </LinearLayout>
 </LinearLayout>   
  
 <FrameLayout
            android:id="@+id/passwordform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true">
            
            <EditText
                android:id="@+id/etpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/etbg"
                android:ems="10"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="#ea5f4f"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/etlabelpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Password"
                android:textColor="#ea5f4f"/>
         <ImageButton
            android:id="@+id/login"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp" 
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:padding="5dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/arrow" />
            
    </FrameLayout>
</RelativeLayout>