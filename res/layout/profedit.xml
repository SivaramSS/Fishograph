<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile"
    android:background="#FFFFFF" >
 
 <ScrollView android:layout_width="match_parent"
     android:layout_height="wrap_content"
     >   
 <LinearLayout android:id="@+id/edl"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:orientation="vertical"
      >
  <RelativeLayout android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp" >
      
    <TextView android:id="@+id/fnamelabel"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="first name"
       android:padding="5dp"
       android:layout_alignLeft="@+id/firstname"
       android:layout_alignBottom="@+id/firstname"
       />
      <EditText
       android:id="@+id/firstname"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:paddingLeft="5dp"
       android:ems="10"
       >
   
       </EditText>
   </RelativeLayout>
  
  <RelativeLayout android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp">
      
    <TextView android:id="@+id/lnamelabel"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="last name"
       android:padding="5dp"
       android:layout_alignLeft="@+id/lastname"
       android:layout_alignBottom="@+id/lastname"
       />
      <EditText
       android:id="@+id/lastname"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingLeft="5dp"
       android:layout_alignParentTop="true"
       android:ems="10"
       >
   
       </EditText>
   </RelativeLayout>
   
  <RelativeLayout android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp">
      
    <TextView android:id="@+id/handlelabel"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="handle"
       android:padding="5dp"
       android:layout_alignLeft="@+id/handle"
       android:layout_alignBottom="@+id/handle"
       />
      <EditText
       android:id="@+id/handle"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingLeft="5dp"
       android:layout_alignParentTop="true"
       android:ems="10"
       >
   
       </EditText>
   </RelativeLayout>
   
  <RelativeLayout android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp">
      
    <TextView android:id="@+id/biolabel"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="bio"
       android:padding="5dp"
       android:layout_alignLeft="@+id/bio"
       android:layout_alignBottom="@+id/bio"
       />
      <EditText
       android:id="@+id/bio"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingLeft="5dp"
       android:layout_alignParentTop="true"
       android:ems="10"
       >
   
       </EditText>
   </RelativeLayout>
   
  <RelativeLayout android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp">
      
    <TextView android:id="@+id/label"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Private Information"
       android:padding="5dp"
       android:textStyle="bold"
       android:textAppearance="?android:attr/textAppearanceMedium"
       />
   </RelativeLayout>
   
  <RelativeLayout android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp">
      
    <TextView android:id="@+id/doblabel"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="dob"
       android:padding="5dp"
       android:layout_alignLeft="@+id/dob"
       android:layout_alignBottom="@+id/dob"
       />
      <EditText
       android:id="@+id/dob"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingLeft="5dp"
       android:layout_alignParentTop="true"
       android:ems="10"
       android:focusable="false"
       android:inputType="date"
       >
   
       </EditText>
   </RelativeLayout>
   
   <RelativeLayout android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp">
      
    <TextView android:id="@+id/genderlabel"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="gender"
       android:padding="5dp"
       android:layout_alignLeft="@+id/gender"
       android:layout_alignBottom="@+id/gender"
       />
      <EditText
       android:id="@+id/gender"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingLeft="5dp"
       android:layout_alignParentTop="true"
       android:ems="10"
       >
   
       </EditText>
   </RelativeLayout>
  <RelativeLayout android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp">
      
    <TextView android:id="@+id/locationlabel"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="location"
       android:padding="5dp"
       android:layout_alignLeft="@+id/location"
       android:layout_alignBottom="@+id/location"
       />
      <EditText
       android:id="@+id/location"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingLeft="5dp"
       android:layout_alignParentTop="true"
       android:ems="10"
       >
   
       </EditText>
   </RelativeLayout> 
 </LinearLayout>  
</ScrollView>
   
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
           
        >
        <Button android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="-5dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp"
			android:layout_marginTop="-5dp"
			android:minWidth="-2dp"
			android:background="#d3d3d3"
            android:text="cancel"
            android:textColor="#ea5f4f"
            />
        <Button android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="-5dp"
			android:layout_marginLeft="-5dp"
			android:layout_marginRight="-5dp"
			android:layout_marginTop="-5dp"
			android:minWidth="-2dp"
			android:background="#d3d3d3"
            android:text="save"
            android:textColor="#ea5f4f"
            />
   </LinearLayout>

</RelativeLayout>